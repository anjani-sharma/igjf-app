{
  "expo": {
    "name": "IGJF Member App",
    "slug": "igjf-member-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "igjfapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "sdkVersion": "54.0.0",
    "description": "Official IGJF member management and event tracking application",
    "privacy": "public",
    "platforms": ["ios", "android", "web"],
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.igjf.memberapp",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses camera to scan QR codes and take profile pictures",
        "NSPhotoLibraryUsageDescription": "This app accesses photo library to select profile pictures"
      }
    },
    "android": {
      "package": "com.igjf.memberapp",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "server",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow IGJF app to access your camera to scan QR codes and take profile pictures"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow IGJF app to access your photos to select profile pictures"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}